<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/statsactivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StatsActivity" >

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Statistiques du jeux"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewMostPlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewPercentWon"
        android:layout_alignRight="@+id/textViewPercentWon"
        android:layout_below="@+id/textViewPercentWon"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textViewLastGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewMostPlayed"
        android:layout_alignRight="@+id/textViewMostPlayed"
        android:layout_below="@+id/textViewMostPlayed"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Retour"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewPercentWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/buttonBack"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="22sp" />

</RelativeLayout>