<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameActivity" >

    <Button
        android:id="@+id/buttonYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/buttonRather"
        android:minWidth="100dip"
        android:text="Oui"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonRatherNot"
        android:layout_alignBottom="@+id/buttonRatherNot"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/buttonRatherNot"
        android:minWidth="100dip"
        android:text="Non"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonDontNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonRather"
        android:layout_alignBottom="@+id/buttonRather"
        android:layout_centerHorizontal="true"
        android:minWidth="100dip"
        android:text="Ne sais pas" 
        android:textSize="20dp"/>

    <Button
        android:id="@+id/buttonRatherNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonDontNo"
        android:layout_alignBottom="@+id/buttonDontNo"
        android:layout_toRightOf="@+id/buttonDontNo"
        android:minWidth="100dip"
        android:text="Plutôt pas" 
        android:textSize="20dp"/>

    <Button
        android:id="@+id/buttonRather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonYes"
        android:layout_alignBottom="@+id/buttonYes"
        android:layout_toLeftOf="@+id/buttonDontNo"
        android:minWidth="100dip"
        android:text="Plutôt"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewQuestionRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageViewGenie"
        android:text="tessssssssssssssss"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/imageViewGenie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonNo"
        android:layout_centerVertical="true"
        android:src="@drawable/genie1" />

</RelativeLayout>
