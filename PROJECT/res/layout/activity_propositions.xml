<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/propositionactivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PropositionsActivity" >

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Si vous voyez votre personnage dans cette liste, cliquez dessus"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonDontAppear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Mon personnage n&apos;apparait pas dans la liste"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewProposition3rd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewProposition1st"
        android:layout_alignBottom="@+id/textViewProposition1st"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="onClickProposition"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewProposition2nd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewProposition1st"
        android:layout_alignBottom="@+id/textViewProposition1st"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="onClickProposition"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewProposition1st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTitle"
        android:layout_below="@+id/textViewTitle"
        android:clickable="true"
        android:onClick="onClickProposition"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageViewProposition1st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewProposition1st"
        android:layout_below="@+id/textViewProposition1st"
        android:tag=""
        android:clickable="true"
        android:onClick="onClickProposition" />

    <ImageView
        android:id="@+id/imageViewProposition2nd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewProposition2nd"
        android:layout_alignTop="@+id/imageViewProposition1st"
        android:tag=""
        android:clickable="true"
        android:onClick="onClickProposition" />

    <ImageView
        android:id="@+id/imageViewProposition3rd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewProposition3rd"
        android:layout_below="@+id/textViewProposition3rd" 
        android:tag=""
        android:clickable="true"
        android:onClick="onClickProposition"/>

</RelativeLayout>